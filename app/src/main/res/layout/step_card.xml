<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ingredient_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/detail_corner_radius"
    card_view:cardBackgroundColor="@color/cardColor"
    android:padding="@dimen/standard_padding"
    tools:context=".ui.RecipeDetail">

    <ImageView
        android:id="@+id/step_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="step image"
        android:padding="@dimen/standard_padding"/>

    <TextView
        android:id="@+id/step_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:singleLine="false"
        android:fontFamily="casual"
        android:padding="@dimen/standard_padding"
        android:gravity="center_vertical"
        android:textColor="@color/textColor"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_view_space"
        android:background="@color/activityBackground"/>

</android.support.v7.widget.CardView>